<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HyperPayAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom checkout theme -->
    <style name="CustomCheckoutTheme" parent="Theme.Checkout.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="headerBackground">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout">
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
    </style>

    <style name="HintTextAppearance" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>